<h1 class="page-header">Administrador</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Listando Administrador
        <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
            <i class="fa fa-plus"></i>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Tipo de acesso</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <% @admins.each do |admin| %>
                        <tr>
                            <td><%= admin.id %></td>
                            <td><%= admin.name %></td>
                            <td><%= admin.email %></td>
                            <td><%= admin.role_br %></td> <!-- role_br: função no model pra traduzir  o enum -->
                            <td style="width: 100px; text-align: center;">
                                <%= link_to edit_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do %>
                                        <i class="fa fa-pencil"></i>
                                <% end %>
                                <% if current_admin.id != admin.id %>
                                    <%= link_to backoffice_admin_path(admin.id), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Você deseja realmente excluir #{admin.email}?"} do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>
                                <% else %> 
                                    <%= link_to "#", class:"btn btn-danger btn-circle", disabled: "disabled" do %>
                                        <i class="fa fa-trash-o"></i>
                                    <% end %>   
                                <% end  %>    
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div><!-- div table-responsive -->
    </div><!-- /.panel-body -->
</div><!-- panel-default -->
          